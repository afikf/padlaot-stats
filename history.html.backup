                letter-spacing: 0.2px;
            }

            .player-stats-list {
                grid-template-columns: 1fr;
                gap: 8px;
            }

            .game-night-tab {
                font-size: 12px;
                padding: 6px 8px;
            }

            .performance-controls {
                justify-content: center;
            }

            .performance-table {
                font-size: 12px;
            }

            .performance-table th,
            .performance-table td {
                padding: 8px 6px;
            }

            .performance-summary {
                grid-template-columns: repeat(2, 1fr);
                gap: 10px;
            }

            .summary-card {
                padding: 12px;
            }

            .summary-value {
                font-size: 20px;
            }
        }
