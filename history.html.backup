                padding: 10px;
            }

            .mini-game-header:hover {
                background-color: #f8f9fa;
                border-radius: 6px;
            }

            .quick-stats-grid {
                grid-template-columns: repeat(3, 1fr);
                gap: 8px;
            }

            .quick-stat-card {
                padding: 10px 6px;
                min-height: 70px;
            }

            .quick-stat-icon {
                font-size: 16px;
                margin-bottom: 3px;
            }

            .quick-stat-number {
                font-size: 14px;
                margin-bottom: 2px;
